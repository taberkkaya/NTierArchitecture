{
  "$schema": "http://json.schemastore.org/template",
  "author": "ataberk",
  "classifications": ["Web", "API", "N-Tier Architecture"],
  "name": "N-Tier Architecture Template",
  "identity": "NTierArch.StarterKit",
  "shortName": "ntierArch",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "NTierArchitecture",
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(net7.0 || net8.0)",
          "exclude": ["**/bin/**", "**/obj/**"]
        }
      ]
    }
  ],
  "icon": "./assets/logo64x64.png",
  "iconFile": "./assets/logo64x64.png",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "net8.0", "description": ".NET 8.0" },
        { "choice": "net7.0", "description": ".NET 7.0" }
      ],
      "defaultValue": "net8.0",
      "replaces": "net8.0"
    }
  }
}
